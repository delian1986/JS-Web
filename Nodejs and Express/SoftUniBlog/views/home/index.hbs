<div class="container body-content">
    <div class="row">
        {{#if articles}}
        {{#each articles}}
        <div class="col-md-6">
            <article>
                <header>
                    <h2>{{title}}</h2>
                </header>

                <p>{{content}}</p>

                <small class="author">
                    {{author}}
                </small>

                <footer>
                    <div class="pull-right">
                        <a class="btn btn-default btn-xs" href="/article/details/{{_id}}">Read more &raquo;</a>
                    </div>
                </footer>
            </article>
        </div>
        {{/each}}
        {{else}}
            <h1>No Articles in database!</h1>
        {{/if}}
    </div>
</div>