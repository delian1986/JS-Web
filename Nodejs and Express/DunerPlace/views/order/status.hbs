<h1>Your orders</h1>
<div class="orders">
    {{#if orders}}
    {{#each orders}}
    <div class="order">
        <span class="order-time">{{date}}</span>
        <span class="order-name">{{product.category}} duner, {{product.size}} cm</span>

        {{#if isAdmin}}
        <span class="order-status">
            <select name="59e8ea04906b6628acbf9d28" selected="pending">
                <option selected="selected" value="pending">Pending</option>
                <option value="inProgress">In Progress</option>
                <option value="inTransit" selected>In Transit</option>
                <option value="delivered">Delivered</option>
            </select>
        </span>
        {{else}}
        <span class="order-status">{{status}}</span>

        {{/if}}
        <a href="/order/details/{{_id}}" class="button order-button">Details</a>
    </div>
    {{/each}}
    {{else}}
    <h2>You don't have orders yet :(</h2>
    {{/if}}

</div>