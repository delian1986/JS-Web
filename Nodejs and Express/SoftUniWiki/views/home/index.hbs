<section id="featured">
    <h2>Latest article</h2>
    <article>
        {{#if latest}}
        <h3>{{latest.title}}</h3>
        <p>
            {{latest.content}} &hellip;
        </p>
        <div class="controls">
            <a href="/article/details/{{_id}}">Read more</a>
        </div>
        {{else}}
        <h3>No articles in Db</h3>
        {{/if}}
    </article>
</section>
<section id="recent">
    <h2>Recently added articles</h2>
    <ul>
        {{#if latestThreeArticles}}
        {{#each latestThreeArticles}}
        <li>
            <a href="/article/details/{{_id}}">{{title}}</a>
        </li>
        {{/each}}
        {{else}}
        <h3>No articles in Db</h3>
        {{/if}}
    </ul>
</section>